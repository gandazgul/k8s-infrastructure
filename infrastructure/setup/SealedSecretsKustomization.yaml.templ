---
apiVersion: kustomize.toolkit.fluxcd.io/v1beta1
kind: Kustomization
metadata:
  name: sealed-secret
  namespace: kube-system
spec:
  dependsOn:
  - name: kube-system
  interval: 10m0s
  path: ./clusters/{{CLUSTER_NAME}}/sealed-secret/
  prune: true
  sourceRef:
    kind: GitRepository
    name: k8s-infrastructure
    namespace: kube-system
  validation: client
